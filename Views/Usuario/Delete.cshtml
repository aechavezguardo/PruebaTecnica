@model PruebaTecnica.Models.Usuario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Usuario</h2>
<br />
<h3>¿Confirma eliminación del siguiente usuario?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UsuarioNombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioNombre)
        </dd>
    </dl>
    <br />

    @using (Html.BeginForm("DeleteConfirmed", "Usuario", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Identificador)

        <div class="row mb-3 d-flex justify-content-center">
            <div class="col-auto">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
            </div>
            <div class="col-auto">
                @Html.ActionLink("Cancelar", "Index", "Usuario", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    }
</div>